---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
	<link rel="stylesheet" href="/src/styles/global.css">
  </head>

  <body>
    <!-- HEADER / NAV -->
    <header>
      <nav>
        <a href="/" class={Astro.url.pathname === "/" ? "active" : ""}>Sobre mí</a>
        <a href="/posts/" class={Astro.url.pathname.startsWith("/posts") ? "active" : ""}>Posts</a>
        <a href="/contacto/" class={Astro.url.pathname.startsWith("/contacto") ? "active" : ""}>Contacto</a>
      </nav>
      <div id="netstats"></div>
    </header>

    <!-- PAGE CONTENT -->
    <main>
      <slot />
    </main>
    <footer>
    © {new Date().getFullYear()} • Juan Cruz Miranda • Desarrollador HFT y Sistemas de Baja Latencia
    <br />
    <a href="https://github.com/TU_USUARIO" target="_blank">GitHub</a> •
    <a href="https://www.linkedin.com/in/TU_USUARIO" target="_blank">LinkedIn</a>
    </footer>
  </body>
</html>
